<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/hue"
    tools:context=".MainActivity16"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="320px"
        android:background="@drawable/searchbar"
        android:backgroundTint="@color/color4"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/back11"
            android:clickable="true"
            android:layout_marginTop="180px"
            android:layout_width="150px"
            android:layout_marginLeft="20px"
            android:background="@color/hue"
            android:layout_height="80px"
            android:scaleType="fitCenter"
            android:src="@mipmap/arrow3_round"
            android:backgroundTint="@color/color4"

            ></ImageButton>

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="John Cooper"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:textSize="24dp"
            android:layout_marginTop="-95px"
            android:layout_marginLeft="140px"></TextView>

        <ImageButton
            android:id="@+id/call"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginTop="-90px"
            android:background="@mipmap/dial2"
            android:layout_marginLeft="800px"></ImageButton>

        <ImageButton
            android:id="@+id/videoCall"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginTop="-100px"
            android:background="@mipmap/video3"
            android:layout_marginLeft="920px">

        </ImageButton>



    </LinearLayout>





    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/userRV"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        app:layout_constraintBottom_toTopOf="@id/cardView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginBottom="10dp"
        app:stackFromEnd="true"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/cardView"
        android:layout_width="1000px"
        android:layout_height="170px"
        android:background="@drawable/inputfeild"
        android:backgroundTint="@color/color4"
        android:layout_marginLeft="40px"
        android:layout_marginTop="-20dp">

        <ImageButton
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginTop="30px"
            android:layout_marginLeft="20px"
            android:background="@mipmap/attach"></ImageButton>
        <ImageButton
            android:id="@+id/gallery"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginTop="30px"
            android:layout_marginLeft="0px"
            android:background="@mipmap/image"></ImageButton>
        <EditText
            android:id="@+id/msgFeild"
            android:layout_width="470px"
            android:layout_height="40dp"
            android:background="@drawable/inputfeild"
            android:backgroundTint="@color/color4"
            android:hint="Type something ..."
            android:textColor="@color/hue"
            android:layout_marginLeft="10px"
            android:layout_marginTop="20px"></EditText>

        <ImageButton
            android:id="@+id/camera"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginTop="30px"
            android:layout_marginLeft="0px"
            android:background="@mipmap/camera3"></ImageButton>

        <ImageButton
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginTop="30px"
            android:layout_marginLeft="0px"
            android:background="@mipmap/mic"></ImageButton>

        <ImageButton
            android:id="@+id/send"
            android:layout_width="100px"
            android:layout_height="100px"
            android:layout_marginTop="30px"
            android:layout_marginLeft="0px"
            android:background="@mipmap/send"></ImageButton>

    </LinearLayout>
    <View
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="@drawable/circles"
        android:layout_marginTop="-50px"
        android:layout_marginLeft="450px"
        android:backgroundTint="@color/color10"></View>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200px"
        android:background="@color/color10"
        android:layout_marginTop="-130px">

        <ImageButton
            android:id="@+id/home5"
            android:layout_width="180px"
            android:layout_height="180px"
            android:src="@mipmap/home2"
            android:layout_marginLeft="30px"
            android:layout_marginTop="-30px"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/color10"></ImageButton>



        <ImageButton
            android:id="@+id/search"
            android:layout_width="180px"
            android:layout_height="180px"
            android:src="@mipmap/search3"
            android:layout_marginLeft="50px"
            android:layout_marginTop="-30px"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/color10"></ImageButton>

        <ImageButton
            android:id="@+id/chat"
            android:layout_width="180px"
            android:layout_height="180px"
            android:src="@mipmap/chat3"

            android:layout_marginLeft="220px"
            android:layout_marginTop="-30px"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/color10"></ImageButton>

        <ImageButton
            android:id="@+id/myprofile"
            android:layout_width="180px"
            android:layout_height="180px"
            android:src="@mipmap/person"
            android:layout_marginLeft="50px"
            android:layout_marginTop="-30px"
            android:scaleType="centerCrop"
            android:backgroundTint="@color/color10"></ImageButton>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textColor="@color/color12"
            android:layout_marginTop="83px"
            android:layout_marginLeft="-1000px"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:textColor="@color/color12"
            android:layout_marginTop="83px"
            android:layout_marginLeft="95px"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chat"
            android:textColor="@color/hue"
            android:layout_marginTop="83px"
            android:layout_marginLeft="300px"></TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textColor="@color/color12"
            android:layout_marginTop="83px"
            android:layout_marginLeft="120px"></TextView>



    </LinearLayout>

    <ImageButton
        android:id="@+id/add2"
        android:layout_width="110px"
        android:layout_height="110px"
        android:layout_marginLeft="495px"
        android:layout_marginTop="-250px"
        android:src="@mipmap/plus"
        android:backgroundTint="@color/color10"
        android:background="@drawable/circles"
        ></ImageButton>

</LinearLayout>