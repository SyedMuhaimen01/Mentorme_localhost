<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/hue"
    tools:context=".MainActivity19"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1600px"
        android:background="@color/color9"
        android:layout_marginTop="300px">

        <ImageButton
            android:layout_width="80px"
            android:layout_height="80px"

        android:src="@mipmap/close4"
            android:layout_marginLeft="40px"
            android:layout_marginTop="20px"></ImageButton>

        <ImageButton
            android:layout_width="80px"
            android:layout_height="80px"
        android:src="@mipmap/hdr"

            android:layout_marginLeft="380px"
            android:layout_marginTop="20px"></ImageButton>

        <ImageButton
            android:layout_width="80px"
            android:layout_height="80px"
            android:src="@mipmap/sun"

            android:layout_marginLeft="370px"
            android:layout_marginTop="20px"></ImageButton>


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Portrait"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="5px"
        android:layout_marginLeft="60px"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Slo-mo"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="-55px"
        android:layout_marginLeft="260px"></TextView>

    <TextView
        android:layout_width="200px"
        android:layout_height="wrap_content"
        android:text="Video"
        android:textAlignment="center"
        android:textColor="@color/color5"
        android:layout_marginLeft="440px"
        android:layout_marginTop="-55px"
        android:backgroundTint="@color/color3"
        android:background="@drawable/inputfeild"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Photo"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="-55px"
        android:layout_marginLeft="700px"></TextView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Square"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginTop="-55px"
        android:layout_marginLeft="900px"></TextView>

    <View
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="@drawable/round2"
        android:layout_marginTop="20px"
        android:layout_marginLeft="130px"></View>
    <ImageButton
        android:layout_width="70px"
        android:layout_height="70px"
        android:backgroundTint="@color/color5"
        android:src="@mipmap/image4"
        android:layout_marginTop="-135px"
        android:layout_marginLeft="196px"></ImageButton>

    <ImageButton
        android:id="@+id/capture"
        android:layout_width="230px"
        android:layout_height="230px"
        android:layout_marginTop="-150px"
        android:layout_marginLeft="420px"
        android:background="@drawable/circle5"
        ></ImageButton>

    <View
        android:layout_width="200px"
        android:layout_height="200px"
        android:background="@drawable/round2"
        android:layout_marginTop="-210px"
        android:layout_marginLeft="760px"></View>
    <ImageButton
        android:id="@+id/camera"
        android:layout_width="70px"
        android:layout_height="70px"
        android:backgroundTint="@color/color5"
        android:src="@mipmap/camera4"
        android:layout_marginTop="-135px"
        android:layout_marginLeft="826px"></ImageButton>

</LinearLayout>